@model TipoCuenta

@{
    ViewData["Title"] = "Eliminar Tipo Cuenta";
}

<h3 class="mb-3">¿Estás seguro que deseas borar el tipo cuenta @Model.Nombre?</h3>

<form asp-action="DeleteTipoCuenta">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="index" class="btn btn-secondary">Cancelar</a>
</form>